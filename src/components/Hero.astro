---
import { getLangFromUrl, useTranslations } from '@i18n/utils';
import HeroIcons from './HeroIcons.svelte';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class='my-8 md:my-24 mx-auto max-w-7xl px-4' transition:name='hero'>
	<div class='mx-auto'>
		<h1
			class='tracking-tight text-blue-600 sm:text-lg md:text-2xl font-inclusive'
		>
			<span class='block xl:inline'>{t('hero.introduction')}</span>
		</h1>
		<p
			class='mt-3 md:mt-5 text-blue-800 text-4xl sm:text-4xl md:text-6xl lg:text-8xl hero-title font-inclusive'
		>
			{t('hero.title1')}
			<span class='lg:text-8xl font-newsreader italic tracking-normal'
				>{t('hero.title2')}</span
			>
		</p>
		<HeroIcons />
	</div>
</div>
<style>
	.hero-title {
		letter-spacing: -0.06em;
	}
</style>
