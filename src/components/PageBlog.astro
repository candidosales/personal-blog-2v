---
import Layout from '@layouts/Layout.astro';
import Header from '@components/Header.svelte';
import { posts } from '@data/posts';
import { getPosts, PAYLOAD_API_URL } from '@lib/payload';

import { getLangFromUrl } from '@i18n/utils';

const lang = getLangFromUrl(Astro.url);

const mdPostsEn = import.meta.glob('../pages/blog/*.md', { eager: true });
const mdPostsPt = import.meta.glob('../pages/pt-br/blog/*.md', { eager: true });

const postsMap = lang === 'pt-br' ? mdPostsPt : mdPostsEn;
const mdPosts = Object.entries(postsMap).map(([path, post]: [string, any]) => {
  const url = path
    .replace('../pages', '')
    .replace('.md', '')
    .replace('/index', '');
  return {
    ...post,
    url,
  };
});

const payloadPosts = await getPosts();
const formattedPayloadPosts = payloadPosts.map((post: any) => ({
  title: post.title,
  description: post.meta?.description || '',
  href: `/post/${post.slug}`,
  publishDate: post.publishedAt,
  image: {
    url: post.meta?.image?.url
      ? `${PAYLOAD_API_URL}${post.meta.image.url}`
      : '',
    alt: post.meta?.image?.alt || post.title,
  },
}));

const allPosts = [
  ...posts,
  ...mdPosts.map((post: any) => ({
    title: post.frontmatter.title,
    description: post.frontmatter.description || '',
    href: post.url,
    publishDate: post.frontmatter.pubDate,
    image: post.frontmatter.image,
  })),
  ...formattedPayloadPosts,
].sort(
  (a, b) =>
    new Date(b.publishDate).getTime() - new Date(a.publishDate).getTime(),
);
---

<Layout title='Blog'>
  <Header client:only='svelte' />
  <main class='relative pb-36 mx-auto max-w-5xl mt-16 mb-16 px-4'>
    <h1
      class='text-3xl leading-8 font-medium tracking-tight text-blue-800 sm:text-4xl mt-10'
      transition:name='hero'
    >
      Blog
    </h1>
    <div
      class='md:grid md:grid-cols-2 lg:grid lg:grid-cols-2 gap-6 mt-10'
      transition:name='content'
    >
      {
        allPosts.map((p) => (
          <a
            href={p.href}
            title={p.title}
            target={p.href?.startsWith('http') ? '_blank' : '_self'}
            class='card-link block h-420px relative overflow-hidden cursor-pointer mb-8 p-2 md:p-4 rounded-lg'
          >
            <div class='relative rounded-lg overflow-hidden w-full mx-auto mb-4 h-48'>
              <div
                class='relative w-full h-48 bg-cover bg-no-repeat bg-center'
                style={`background-image: url(${p.image.url});`}
              />
            </div>

            <h3 class='text-blue-800 text-lg font-medium leading-6 mb-1 line-clamp-2'>
              {p.title}
            </h3>
            <p class='text-blue-800/80 text-md font-normal mb-4 line-clamp-2'>
              {p.description}
            </p>
            <p class='text-blue-800/80 text-xs font-normal'>
              {new Date(p.publishDate).toLocaleDateString(lang, {
                year: 'numeric',
                month: 'short',
                day: 'numeric',
              })}
            </p>
          </a>
        ))
      }
    </div>
  </main>
</Layout>
