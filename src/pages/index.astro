---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import Card from "../components/Card.astro";
import { AstroSeo } from "@astrolib/seo";

import { portfolio } from "../data/portfolio";
---

<AstroSeo
  title="Candido Sales - Developer"
  description="Candido Sales - Developer"
  canonical="https://candidosales.me"
  openGraph={{
    url: "https://candidosales.me",
    title: "Candido Sales - Developer",
    description: "Michael Andreuzza portfolio",
    images: [
      {
        url: "https://candidosales.me/opengraph/facebook.png",
        width: 1200,
        height: 630,
        alt: "Social open graph",
        type: "image/png",
      },
      {
        url: "https://www.candidosales.me/opengraph/twitter.png",
        width: 4096,
        height: 4096,
        alt: "Twitter open graph",
        type: "image/jpeg",
      },
      { url: "https://candidosales.me/opengraph/fb.png" },
      { url: "https://candidosales.me/opengraph/twitter.png" },
    ],
    site_name: "Candido Sales - Developer",
  }}
  twitter={{
    handle: "@candidosales",
    site: "@candidosales",
    cardType: "summary_large_image",
  }}
/>

<Layout>
  <main class="relative pt-6 pb-16 sm:pb-24 mx-auto max-w-7xl">
    <Header />
    <Hero />

    <div class="mt-16 mb-16 px-4 sm:mt-24">
      <h2 class="text-2xl" data-aos="fade-up" data-aos-duration="1000">
        Portfolio
      </h2>
      <p
        class="text-md text-slate-400 mb-8"
        data-aos="fade-up"
        data-aos-duration="1500"
      >
        Some open source projects that I've built and maintain
      </p>
      <div
        class="space-y-12 sm:grid sm:grid-cols-2 sm:gap-x-6 sm:gap-y-8 sm:space-y-0 lg:grid-cols-3 lg:gap-x-8 mb-16"
        data-aos="fade-up"
        data-aos-duration="2000"
      >
        {
          portfolio.map((p) => (
            <Card
              title={p.title}
              description={p.description}
              href={p.url}
              imageUrl={p.imageUrl}
              imageAlt={p.imageAlt}
              techs={p.techs}
            />
          ))
        }
      </div>

      <h2 class="text-2xl">Extras</h2>
      <p class="text-md text-slate-400 mb-8">
        Other projects that I develop in my spare time to practice new resources
        and technologies
      </p>
    </div>
  </main>
</Layout>
