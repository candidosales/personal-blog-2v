---
import { GoogleAnalytics } from "astro-google-analytics";
import "@fontsource-variable/inter";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <GoogleAnalytics id="G-KF2R0QYPX7" />
  </head>
  <body>
    <div class="topbar-blur" aria-hidden="true"></div>
    <slot />
    <script type="text/javascript" src="https://unpkg.com/aos@2.3.1/dist/aos.js"
    ></script>
    <script type="text/javascript">
      AOS.init();

      document.addEventListener("touchstart", onTouchStart, { passive: true });
    </script>
    <style is:global>
      body {
        /* font-family: "Inter Variable", sans-serif; */
        letter-spacing: -0.05em;
      }
      .topbar-blur {
        position: relative;
        user-select: none;
        pointer-events: none;
        --h: min(96px, 128px);
        position: sticky;
        height: var(--h);
        z-index: 1;
        backdrop-filter: blur(5px);
        opacity: 0.95;
        mask-image: linear-gradient(to bottom, #000 25%, transparent);
      }
      .topbar-blur:first-child {
        margin-bottom: calc(-1 * var(--h));
        top: 0;
      }
      .topbar-blur:after {
        content: "";
        position: absolute;
        inset: 0;
        background: linear-gradient(to bottom, white, transparent);
      }

      @keyframes scale-up {
        from {
          transform-origin: 50% 50%;
          scale: 0;
        }
        to {
          transform-origin: 50% 50%;
          scale: 0;
        }
      }

      @keyframes fade-in {
        from {
          opacity: 0;
          clip-path: inset(50% 0% 50% 0%);
        }
        to {
          opacity: 1;
          clip-path: inset(0% 0% 0% 0%);
        }
      }

      @keyframes grow-progress {
        from {
          transform: scaleX(0);
        }
        to {
          transform: scaleX(1);
        }
      }

      .scroll-fade {
        animation: fade-in linear;
        animation-timeline: view(block);
        /* animation-range: entry-crossing 0 entry-crossing 100; */
      }
    </style>
  </body>
</html>
