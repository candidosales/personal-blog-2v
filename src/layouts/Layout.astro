---
import "@fontsource-variable/inter";
import { SEO } from "astro-seo";
const { pageTitle } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <script
      type="text/partytown"
      src="https://www.googletagmanager.com/gtag/js?id=G-KF2R0QYPX7"></script>
    <script type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("config", "G-KF2R0QYPX7");
    </script>

    <SEO
      title={pageTitle}
      titleTemplate="%s | Candido Sales - Software Engineer"
      titleDefault="Candido Sales - Software Engineer"
      description="A multidisciplinary engineer focusing on digital experiences"
      canonical="https://candidosales.me"
      openGraph={{
        basic: {
          title: "Candido Sales - Software Engineer",
          type: "website",
          image: "https://candidosales.me/og-image.png",
          url: "https://candidosales.me",
        },
        image: {
          url: "https://candidosales.me/og-image.png",
          width: 1200,
          height: 600,
          alt: "Social open graph",
          type: "image/png",
        },
      }}
      twitter={{
        creator: "@candidosales",
        site: "@candidosales",
        card: "summary_large_image",
        title: "Candido Sales - Software Engineer",
        description:
          "A multidisciplinary engineer focusing on digital experiences",
      }}
    />
  </head>
  <body>
    <div class="topbar-blur" aria-hidden="true"></div>
    <slot />
    <style>
      body {
        letter-spacing: -0.05em;
      }
      .topbar-blur {
        position: relative;
        user-select: none;
        pointer-events: none;
        --h: min(96px, 128px);
        position: sticky;
        height: var(--h);
        z-index: 1;
        backdrop-filter: blur(5px);
        opacity: 0.95;
        mask-image: linear-gradient(to bottom, #000 25%, transparent);
      }
      .topbar-blur:first-child {
        margin-bottom: calc(-1 * var(--h));
        top: 0;
      }
      .topbar-blur:after {
        content: "";
        position: absolute;
        inset: 0;
        background: linear-gradient(to bottom, white, transparent);
      }

      @keyframes slide-fade-in {
        from {
          opacity: 0;
          transform: translateY(10vh);
        }
      }

      @media (prefers-reduced-motion: no-preference) {
        :global(.slide-fade-in) {
          view-timeline-name: --item-timeline;
          animation: slide-fade-in both;
          animation-timeline: --item-timeline;
          animation-range: contain 0% contain 50%;
          animation-duration: 300ms;
        }
      }
    </style>
  </body>
</html>
